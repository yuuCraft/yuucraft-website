<body>

<div class="container">
    <h1>Discordプロフィールリンク生成</h1>
    <input type="text" id="discordId" placeholder="ユーザーIDを入力">
    <button onclick="generateLink()">リンク作成</button>

    <div class="result" id="result"></div>
</div>

<script>
function generateLink() {
    const id = document.getElementById("discordId").value.trim();
    const result = document.getElementById("result");

    // 数字チェック（Discord IDは数字のみ）
    if (!/^[0-9]+$/.test(id)) {
        result.innerHTML = "※数字のユーザーIDを入力してください";
        return;
    }

    const url = "https://discord.com/users/" + id;

    result.innerHTML = `
        <p>プロフィールリンク：</p>
        <a href="${url}" target="_blank">${url}</a>
    `;
}
</script>

